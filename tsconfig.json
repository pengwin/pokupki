{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "jsx": "react",
        "outDir": "build",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "lib": [
        "es6"
    ],
    "files": [
        "src/server/index.ts"
    ]
}