{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "Node",
        "outDir": "build/server",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true
    },
    "lib": [
        "ES5",
        "ES2015"
    ],
    "files": [
        "src/server.ts"
    ]
}