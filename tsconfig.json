{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "Node",
        "outDir": "build",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "lib": [
        "ES5",
        "ES2015"
    ],
    "files": [
        "src/server/index.ts"
    ]
}