{
  "name": "pokupki",
  "version": "0.0.1",
  "description": "Application for managing shopping lists",
  "engines": {
    "node": "8.1.3"
  },
  "scripts": {
    "postinstall": "npm run build && npm test",
    "start": "node ./build/server/index.js",
    "add_migration": "db-migrate create",
    "add_sql_migration": "db-migrate create --sql-file",
    "migrate": "db-migrate up",
    "build": "node ./build.js",
    "build_client": "webpack",
    "build_server": "tsc -p tsconfig.json",
    "watch_client": "webpack -w",
    "test": "jest --ci",
    "lint_fix": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "lint": "tslint -t stylish -c tslint.json -e 'src/**/*.spec.ts' 'src/**/*.ts'",
    "debug_tests": "node --inspect-brk ./node_modules/jest/bin/jest.js --watchAll --runInBand",
    "heroku_local": "heroku local web"
  },
  "dependencies": {
    "@types/hapi": "16.1.6",
    "@types/hapi-auth-jwt2": "7.0.3",
    "@types/jest": "20.0.2",
    "@types/jsonwebtoken": "7.2.1",
    "@types/node": "8.0.5",
    "@types/pg": "6.1.41",
    "@types/react": "15.0.34",
    "@types/react-dom": "15.5.1",
    "@types/react-redux": "4.4.45",
    "awesome-typescript-loader": "3.2.1",
    "copy-webpack-plugin": "4.0.1",
    "db-migrate": "0.10.0-beta.20",
    "db-migrate-pg": "0.2.4",
    "good": "7.2.0",
    "good-console": "6.4.0",
    "good-squeeze": "5.0.2",
    "hapi": "16.4.3",
    "hapi-auth-jwt2": "7.3.0",
    "html-webpack-plugin": "2.29.0",
    "inert": "4.2.0",
    "jest": "20.0.4",
    "jsonwebtoken": "7.4.1",
    "moment": "2.18.1",
    "pg": "6.4.0",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-redux": "5.0.5",
    "redux": "3.7.1",
    "redux-devtools-extension": "2.13.2",
    "redux-observable": "0.14.1",
    "rxjs": "5.0.0",
    "source-map-loader": "0.2.1",
    "ts-jest": "20.0.6",
    "ts-loader": "2.2.2",
    "ts-node": "3.1.0",
    "tslint": "5.4.3",
    "tslint-immutable": "4.0.1",
    "typescript": "2.4.1",
    "webpack": "3.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "license": "MIT"
}
