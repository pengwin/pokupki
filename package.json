{
  "name": "pokupki",
  "version": "0.0.1",
  "description": "Application for managing shopping lists",
  "engines": {
    "node": "8.1.3"
  },
  "scripts": {
    "postinstall": "npm run build",
    "start": "node ./build/server/server.js",
    "add_migration": "db-migrate create",
    "add_sql_migration": "db-migrate create --sql-file",
    "migrate": "db-migrate up",
    "build": "node ./buildServer.js",
    "compile": "tsc -p tsconfig.json",
    "test": "jest",
    "lint_fix": "tslint -c tslint.json --fix 'src/**/*.ts'",
    "lint": "tslint -t stylish -c tslint.json -p tsconfig.json --type-check  -e 'src/**/*.spec.ts' 'src/**/*.ts'"
  },
  "dependencies": {
    "@types/hapi": "16.1.6",
    "@types/jest": "20.0.2",
    "@types/node": "8.0.5",
    "@types/pg": "6.1.41",
    "db-migrate": "0.10.0-beta.20",
    "db-migrate-pg": "0.2.4",
    "good": "7.2.0",
    "good-console": "6.4.0",
    "good-squeeze": "5.0.2",
    "hapi": "16.4.3",
    "inert": "4.2.0",
    "jest": "20.0.4",
    "pg": "6.4.0",
    "ts-jest": "20.0.6",
    "ts-node": "3.1.0",
    "tslint": "5.4.3",
    "tslint-immutable": "4.0.1",
    "typescript": "2.4.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "license": "MIT"
}
